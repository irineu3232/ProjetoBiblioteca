@model ProjetoBiblioteca.Models.Usuarios

<h2>Cadastrar Usuário</h2>


<form asp-action="CriarUsuario" method="post">
    @Html.AntiForgeryToken()

    <div>
        <label>Nome</label>
        <input asp-for="Nome" required />
    </div>

    <div>
        <label>Email</label>
        <input asp-for="Email" type="email" required />
    </div>

    <div>
        <label>Senha (hash/temporária)</label>
        <input asp-for="Senha_Hash" type="text" required />
    </div>

    <div>
        <label>Papel</label>
        <select name="Role" required>
            <option value="">Selecione...</option>
            <option value="Bibliotecario">Bibliotecário</option>
            <option value="Admin">Admin</option>
        </select>

    </div>

    <button type="submit">Salvar</button>
</form>


